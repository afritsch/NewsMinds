<div id="content">
<h1>Registrierung:</h1>
<%= form_for @user, :url => { :action => "create" } do |f| %> 
 
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
 
</div>
