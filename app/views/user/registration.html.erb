<h2>Registrierung:</h2>

<table>
<%= form_for @user, :url => { :action => "create" } do |f| %>
    
<tr><td>Username</td><td><%= f.text_field :username %></td></tr>

<tr><td>Passwort</td><td><%= f.password_field :password %></td></tr>
    
<tr><td><%= f.submit ' Registrieren '%></td><td></td></tr>

<% end %>
</table>
