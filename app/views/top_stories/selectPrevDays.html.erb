<h2>Tagesthema vom <%= @top_stories.pubDate.slice(5..10) %></h2>
	<h3><%= raw @top_stories.title %></h3>
  <div><%= raw @top_stories.description %></div>

<% @top_stories.posts.each do |post| %>
  
  <div class="post">
  <h4><%= post.title %></h4>
  <%= post.content %><br />
  
  <% if post.user != nil %>
    Von: <span class="username"><%= post.user.username %></span> Postscore: <%= post.score %>
  <% else %>
    Von: <span class="username">Kommentar von User gelöscht </span> Postscore: <%= post.score %>
  <% end %>
  </div>
  
<% end %>
