<h2>Tagesthema</h2>

<% if @latest_top_story != nil %>

<div>
				
<h3><%= raw @latest_top_story.title %></h3>
<div><%= raw @latest_top_story.description %></div>

</div>

<%= link_to 'Post erstellen', new_post_path(@latest_top_story.id) %>

<% @latest_top_story.posts.each do |post| %>

  <div class="post">
  <h4><%= post.title %></h4>
  <%= post.content %><br />
  Von: <span class="username"><%= post.user.username %></span> Postscore: <%= post.score %>
  </div>
  
  <% if isUserLoggedIn && !doesPostBelongToUser(session[:username], post.user.username) && !hasUserAlreadyVoted(post.voted_usernames, session[:username]) %>
    <%= link_to 'Finde ich gut', user_mind_path(1, post.estimation, post.id) %>
    <%= link_to 'Finde ich schlecht', user_mind_path(0, post.estimation, post.id) %>
  <% end %>

<% end %>	

<% else %>
    <div>Es wurde noch kein Thema als Tagesthema gewählt</div> 
<% end %>
